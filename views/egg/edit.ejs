<%- include('../partials/header.ejs')%>

<main class="row_main">
    <div>
        <h2>Edit your posting</h2>
        <p>Fill out the form to the right and your egg will be updated!</p>
    </div>
    <form class="itemform" action="/eggs/<%= egg.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <label for="condition">Condition</label>
        <select id="condition" name="condition">
            <option value="Good">Good</option>
            <option value="Great">Great</option>
            <option value="New">New</option>
            <option value="Bad">Bad</option>
            <option value="Other">Other</option>
        </select>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= egg.title%>" required>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" step="0.01" value="<%= egg.price%>" required>
        <label for="details">Details</label>
        <textarea name="details" id="details" required><%= egg.details%></textarea>
        <label for="picture">Image</label>
        <input type="file" id="image" name="image" required>
        <input type="submit">
    </form>
</main>

<%- include('../partials/footer.ejs')%>